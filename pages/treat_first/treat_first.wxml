    <block wx:for="{{resultDatas}}" wx:for-item="item">
      <view class='item'>
        <view class='item_left'>
          <view class='item_title'>
            <view class='item_title_num'>{{item.code}}</view>
            <view class='item_title_content'>{{item.name}}</view>
          </view>
          <block wx:if='{{item.num > 0}}'>

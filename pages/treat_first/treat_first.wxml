            <view class='item_childNum'>无二级目录</view>
          </block>
        </view>
        <view class='item_right'>
          <view class='item_bajg'>
            备案机构：{{item.bazy}}
          </view>
          <view class='item_bajg'>
            备案专业：{{item.bazy}}
          </view>
        </view>
        <view style='clear:both'></view>
      </view>
      
      <block wx:if='{{item.isshow == true}}'>
        <block wx:for="{{item.secondList}}" wx:for-item="idx">
          <view class='Childitem'>

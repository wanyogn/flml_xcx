  font-size: 40rpx;
}

.dir_num{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-top: 1rpx solid #00c4c6;
}
.item{
  padding: 10rpx 40rpx;
  border-bottom: 1rpx solid #00c4c6;
}
.item_left{
  float: left
}
.item_right{
  float: right
}
.item_title{
  display: flex;
  flex-direction: row
}

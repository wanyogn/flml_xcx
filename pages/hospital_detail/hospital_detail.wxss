/* pages/product_detail/product_detail.wxss */
@import "../header/header.wxss";
.content-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.header{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  margin: 0 30rpx;
  font-size: 20rpx;
  margin-bottom: 30rpx;
}
.main{
  padding: 20rpx 30rpx 30rpx 30rpx;
  background-color: #f4f4f4;
}
.main_title{
  width: 100%;
  height: 70rpx;
  background-color: #0fbbe9;
}
.main_title text{
  margin: 0;
  padding: 0;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  padding-left: 30rpx;
  line-height: 70rpx;
}
.main_content{
  width: 100%;
  margin-top: 10rpx;
  background-color: #fff;
}
.main_content_body{
  padding: 0 30rpx 30rpx;
}
.main_img{
  width: 100%;
  height: 300rpx;
}
.main_img_con{
  width: 60%;
  height: 90%;
  margin: auto;
}
.main_img_con image{
  width: 100%;
  height: 100%;
}
.main_1_content_body_row{
  width: 100%;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #dedddd;
  display: flex;
  flex-direction: row;
}
.main_1_content_body_row text{
  font-size: 24rpx;
}
.content_title{
  width: 25%;
}
.content_value{
  width: 75%;
}
.main_2,.main_3{
  margin-top: 20rpx;
  color: #898989;
}
.main_2_content_body_row,.main_3_content_body_row{
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #dedddd;
  display: flex;
  flex-direction: column;
}
.main_2_content_body_row text,.main_3_content_body_row text{
  font-size: 26rpx;
  line-height: 40rpx;
}
.bottom{
  margin-top: 10rpx;
  text-align: center;
}
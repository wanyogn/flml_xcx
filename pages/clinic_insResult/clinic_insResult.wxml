<view class='cover' hidden='{{flag}}'></view>
<view class='content_container' >
  
  <view class='content_main'>
    <view class='header'>
      <view class='input'>
        <input type='text' placeholder='请输入关键词' placeholder-class="place-holder" bindinput='keyInput' value='{{keyword}}'/>
        <button bindtap='searchKey'><icon type="search" color='#fff'/></button>
      </view>
      <view class='row'>
        <view class='search_res'>共找到<text class='res_num'>{{matchCount}}</text>家备案医疗机构</view>
        <view class='screen' bindtap='areaSel'>按所在地区筛选</view>
        <view class='screen' bindtap='zlSel'>按诊疗目录筛选</view>
      </view>
    </view>
    <scroll-view scroll-y style="height: {{showHeight}}px;">
      <view class='result_content'>
        <block wx:if="{{matchCount > 0}}">
          <block wx:for="{{searchDatas}}" wx:for-item="item">
            <view class='result_content_main'>
              <view class='result_header'>
                <view class='hospital_name'>{{item.hospital_name}}</view>
                <button class='btn' data-name='{{item.hospital_name}}' bindtap='bindClick'>伦理委员会信息</button>
                <view class='hospital_info'>
                  <text>{{item.province}}</text>
                  <text>{{item.hospital_grade}}</text>
                </view>
                <view style='clear:both'></view>
              </view>
              <view class='result_main'>
                <view class='item'>
                  <view class='title left'>备案号：{{item.register_code}}</view>
                  <view class='title right'>备案日期：{{item.approval_date_original}}</view>
                  <view style='clear:both'></view>
                </view>
                <view class='item'>
                  <view class='title left'>联系人：{{item.contact_person}}</view>
                  <view class='title right'>联系电话：{{item.contact_phone}}</view>
                  <view style='clear:both'></view>
                </view>
                <view class='item'>
                  <view class='title'>地址：{{item.hospital_address}}</view>
                </view>
                <view class='item'>
                  <block wx:if='{{item.show==true}}'>
                    <view class='title more' id='{{item.id}}' bindtap='disProfess'>↑收起所有的备案专业和主要研究者信息</view>
                  </block>
                  <block wx:else>
                    <view class='title more' id='{{item.id}}' bindtap='lookProfess'>查看所有的备案专业和主要研究者信息</view>
                  </block>
                </view>
                <block wx:if="{{item.profess==null}}">
                </block>
                <block wx:else>
                  <block wx:if='{{item.show==true}}'>
                    <view class='item'>
                      <view class='title name left'>专业名称</view>
                      <view class='title job left'>职称</view>
                      <view class='title study left'>主要研究者</view>
                      <view style='clear:both'></view>
                    </view>
                    <block wx:for="{{item.profess}}" wx:for-item="idx">
                      <block wx:if='{{idx.num > 1}}'>
                        <view class='item' data-name='{{idx.profession_name}}' data-id='{{idx.pid}}' bindtap='forDetail'>
                          <view class='title name left'>{{idx.profession_name}}</view>
                          <view class='title job left'  >{{idx.num}}+</view>

                          <view style='clear:both'></view>
                        </view>
                      </block>
                      <block wx:else>
                        <view class='item'>
                          <view class='title name left'>{{idx.profession_name}}</view>
                          <view class='title job left'>{{idx.job_title}}</view>
                          <view class='title study left'>{{idx.main_researcher}}</view>
                          <view style='clear:both'></view>
                        </view>
                      </block>
                    </block>
                    <view class='lookmore' id='{{item.id}}' bindtap='disProfess'>↑收起</view>
                  </block>
                  <block wx:else>
                  </block>
                </block>
              </view>
            </view>
          </block>
          <block wx-if='{{matchCount > hasTotal}}'>
            <view class='lookmore' bindtap='lookMore'>加载更多。。</view>
          </block>
          <block wx:else>
            <view class='lookmore'>已加载全部。。</view>
          </block>
        </block>
        <block wx:else>
          <view class='lookmore'>没有搜到记录</view>
        </block>
      </view>
    </scroll-view>
  </view>
  <view class='modal' hidden='{{proSelFlag}}'>
    <view class='create-box'>
      <view class='choice_title'>按区域选择</view>
      <checkbox-group bindchange="bindchange">
        <block wx:for="{{province}}" wx:for-item="item">
          <view class='area'>
            <view class='area_name'>{{item.title.name}}：</view>
            <view class='area_content'>
              <block wx:for="{{item.content}}" wx:for-item="idx">
                <!--<view class='area_val' data-province='' bindtap='searchByProvince'><checkbox></checkbox>{{idx.name}}</view>-->
                <label class="area_val">
                  <checkbox value="{{idx.name}}" />{{idx.name}}
                </label>
              </block>
            </view>
            <view style='clear:both'></view>
          </view>
        </block>
      </checkbox-group>
      <button class='save_pro'  data-flag='qy' bindtap='save_pro'>确定</button>
    </view>
  </view>

  <view class='modal' hidden='{{zlSelFlag}}'>
    <view class='create-box'>
      <view class='choice_title'>诊疗科目选择</view>
        <view class='area'>
          <checkbox-group bindchange="bindchangeZL">
            <block wx:for="{{TreatDirectory}}" wx:for-item="item">
              <label class="zl_name">
                <checkbox value="{{item.name}}" />{{item.name}}
              </label>
            </block>
          </checkbox-group>
          
        </view>
      <button class='save_pro' data-flag='zl' bindtap='save_pro'>确定</button>
    </view>
  </view>
</view>


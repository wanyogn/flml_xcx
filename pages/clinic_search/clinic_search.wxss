@import "../ml_search/search.wxss";
.input{
  margin-top: 10rpx;
}
.classtype{
  margin-top: 60rpx;
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  margin-left: 20%;
}
.search_mechanism,.search_major{
  width: 30%;
  height: 100%;
  border: 1rpx solid #00c4c6;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  color:#00c4c6; 
  letter-spacing: 5rpx;
  font-weight: bold
}
.active{
  background: #00c4c6;
  color: #fff;
}

.areaChoose{
  margin-top: 100rpx;
}
.title{
  font-size: 24rpx;
}
.area{
  width: 100%;
  margin-top: 30rpx;
}
.area_name{
  width: 25%;
  font-size: 28rpx;
  float: left
}
.area_content{
  width: 75%;
  float: left;
}
.area_val{
  font-size: 28rpx;
  width: 25%;
  float: left;
}
.area_val text{
  margin-left: 0.5em
}